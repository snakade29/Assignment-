{
  "name": "webdriverio-tests",
  "version": "0.0.0",
  "private": true,
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.22.0",
    "@wdio/local-runner": "^9.23.0",
    "@wdio/mocha-framework": "^9.23.0",
    "@wdio/visual-service": "^9.1.0",
    "wdio-wait-for": "^3.1.1",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.js",
    "test:smoke": "wdio run ./wdio.conf.js --mochaOpts.grep @smoke",
    "test:regression": "wdio run ./wdio.conf.js --mochaOpts.grep @regression",
    "clean": "rm -rf allure-results",
    "report": "node scripts/generate-report.js",
    "report-single-file": "allure generate -c --single-file allure-results --report-name Allure Report",
    "run-all": "npm-run-all --continue-on-error clean wdio report"
  }
}